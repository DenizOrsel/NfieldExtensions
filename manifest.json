{
  "name": "Nfield Extensions",
  "version": "1.0.0",
  "description": "A collection of Enhancements for Nfield",
  "author": "Deniz Orsel",
  "manifest_version": 3,
  "icons": {
    "16": "./app/assets/images/icon16.png",
    "48": "./app/assets/images/icon48.png",
    "128": "./app/assets/images/icon128.png"
  },
  "background": {
    "service_worker": "./service_worker.js"
  },
  "action": {
    "default_popup": "./app/popup.html",
    "default_icon": {
      "16": "./app/assets/images/icon16.png",
      "48": "./app/assets/images/icon48.png",
      "128": "./app/assets/images/icon128.png"
    },
    "default_title": "Nfield Extensions"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "identity",
    "webRequest",
    "alarms"
  ],
  "host_permissions": ["https://*.nfieldmr.com/*"]
}   